<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.yanneckreiss.cameraxtutorial" >

    <uses-sdk android:minSdkVersion="28" />

    <!-- Required permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Add other permissions if needed -->
    <application
        android:icon="mipmap/ic_launcher"
        android:label="CameraX" >

        <!-- Activities, services, or other configurations specific to your app -->
        <activity
            android:name="de.yanneckreiss.cameraxtutorial.MainActivity"
            android:exported="true"
            android:label="string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ... Other activities or services specific to your app -->


        <!-- OpenCV initialization configuration -->
        <meta-data
            android:name="org.opencv.engine.OpenCVEngineInterface"
            android:value="org.opencv.engine.OpenCVEngineInterface$EngineService" />
    </application>

</manifest>